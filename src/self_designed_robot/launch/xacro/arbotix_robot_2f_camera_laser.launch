<launch>

  <arg name="model" default="$(find xacro)/xacro --inorder '$(find self_designed_robot)/urdf/xacro/use_robot_2f_camera_laser.xacro'" />
  <arg name="gui" default="true" />

  <param name="robot_description" command="$(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>

  <node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
    <rosparam file="$(find self_designed_robot)/config/fake_mbot_arbotix.yaml" command="load" />
    <param name="sim" value="true" />
  </node>

  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find self_designed_robot)/config/use_robot_2f_camera_laser.rviz" required="true" />

</launch>
